<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
  <div class="login-wrapper">
    <form action="/entry" method="post" id="entryForm" name="entryForm">
      <div class="login-screen">
        <div class="login-body">
          <a href="/entry" class="login-logo">
            <img src="img/logo.svg" alt="Quick Chat" />
          </a>
          <h6>Welcome to Quick Chat App,<br />Create your account.</h6>
          <!--이메일-->
          <div class="field-wrapper">
            <input
              type="email"
              id="email"
              name="email"
              autofocus
              required
              maxlength="100"
            />
            <div class="field-placeholder">Email ID</div>
          </div>
          <!--이름-->
          <div class="field-wrapper">
            <input
              type="text"
              id="name"
              name="name"
              autofocus
              required
              maxlength="100"
            />
            <div class="field-placeholder">Name</div>
          </div>

          <!--비밀번호-->
          <div class="field-wrapper">
            <input
              type="password"
              id="member_password"
              name="member_password"
              required
              maxlength="100"
            />
            <div class="field-placeholder">Password</div>
          </div>
          <!--비번확인-->
          <div class="field-wrapper mb-3">
            <input
              type="password"
              id="confirm_member_password"
              name="confirm_member_password"
              required
              maxlength="100"
            />
            <div class="field-placeholder">Confirm Password</div>
          </div>
          <!--핸드폰-->
          <div class="field-wrapper">
            <input
              type="telephone"
              id="telephone"
              name="telephone"
              required
              maxlength="20"
            />
            <div class="field-placeholder">Telephone</div>
          </div>
          <!--생년월일-->
          <div class="field-wrapper">
            <input type="date" id="birth_date" name="birth_date" />
            <div class="field-placeholder">BirthDate</div>
          </div>
          <!--가입경로-->
          <div class="field-wrapper">
            <select
              name="entry_type_code"
              id="entry_type_code"
              class="form-control"
            >
              <option value="1">📱SNS</option>
              <option value="2">🌐인터넷검색</option>
              <option value="3">🆕뉴스</option>
              <option value="4">🎢커뮤니티</option>
            </select>
            <div class="field-placeholder">EntryType</div>
          </div>
          <div class="actions">
            <button type="submit" class="btn btn-primary ml-auto">
              Sign Up
            </button>
          </div>
        </div>
        <div class="login-footer">
          <span class="additional-link"
            >Have an account?
            <a href="/" class="btn btn-secondary">Login</a></span
          >
        </div>
      </div>
    </form>
  </div>
</div>
<script></script>
