<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
  <div class="login-wrapper">
    <form action="/entry" method="post" id="entryForm" name="entryForm">
      <div class="login-screen">
        <div class="login-body">
          <a href="/entry" class="login-logo">
            <img src="img/logo.svg" alt="Quick Chat" />
          </a>
          <h6>Welcome to Quick Chat App,<br />Create your account.</h6>
          <div class="field-wrapper">
            <input type="email" id="email" name="email" autofocus />
            <div class="field-placeholder">Email ID</div>
          </div>
          <div class="field-wrapper">
            <input
              type="password"
              id="member_password"
              name="member_password"
            />
            <div class="field-placeholder">Password</div>
          </div>
          <div class="field-wrapper mb-3">
            <input
              type="password"
              id="confirm_member_password"
              name="confirm_member_password"
            />
            <div class="field-placeholder">Confirm Password</div>
          </div>
          <div class="actions">
            <button type="submit" class="btn btn-primary ml-auto">
              Sign Up
            </button>
          </div>
        </div>
        <div class="login-footer">
          <span class="additional-link"
            >Have an account?
            <a href="/" class="btn btn-secondary">Login</a></span
          >
        </div>
      </div>
    </form>
  </div>
</div>
<script>
  $("#entryForm").submit(function () {
    if ($("#email").val() === "") {
      alert("메일주소 입력해라");
      return false;
    }
    if ($("#member_password").val() === "") {
      alert("비밀번호 입력해라");
      return false;
    }
    if ($("#confirm_member_password").val() === "") {
      alert("비밀번호 확인을 입력해라");
      return false;
    }
    if ($("#member_password").val() !== $("#confirm_member_password").val()) {
      alert("비밀번호가 틀린데?");
      return false;
    }
  });
</script>
