<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
  <div class="login-wrapper">
    <form action="/entry" method="post" id="entryForm" name="entryForm">
      <div class="login-screen">
        <div class="login-body">
          <a href="/entry" class="login-logo">
            <img src="img/logo.svg" alt="Quick Chat" />
          </a>
          <h6>Welcome to Quick Chat App,<br />Create your account.</h6>
          <div class="field-wrapper">
            <input type="email" id="email" name="email" autofocus />
            <div class="field-placeholder">Email ID</div>
          </div>
          <div class="field-wrapper">
            <input
              type="password"
              id="member_password"
              name="member_password"
            />
            <div class="field-placeholder">Password</div>
          </div>
          <div class="field-wrapper mb-3">
            <input
              type="password"
              id="confirm_member_password"
              name="confirm_member_password"
            />
            <div class="field-placeholder">Confirm Password</div>
          </div>
          <div class="actions">
            <button type="submit" class="btn btn-primary ml-auto">
              Sign Up
            </button>
          </div>
        </div>
        <div class="login-footer">
          <span class="additional-link"
            >Have an account?
            <a href="/" class="btn btn-secondary">Login</a></span
          >
        </div>
      </div>
    </form>
  </div>
</div>
<script>
  $("#entryForm").submit(function () {
    var email = $("#email").val();
    var member_password = $("#member_password").val();
    var confirm_member_password = $("#confirm_member_password").val();

    if (email === "") {
      alert("메일주소 입력해라");
      return false;
    }
    if (email.length > 100) {
      alert("메일주소는 100글자 미만");
      return false;
    }
    if (member_password === "") {
      alert("비밀번호 입력해라");
      return false;
    }
    if (member_password.length > 100) {
      //암호화해서 500글자니까...어느정도로 잡아야 할 지 정확히는 모르겠음
      alert("비밀번호는 100글자 미만");
      return false;
    }
    if (confirm_member_password === "") {
      alert("확인 비밀번호를 입력해라");
      return false;
    }
    if (confirm_member_password > 100) {
      alert("확인 비밀번호는 100글자 미만");
      return false;
    }
    if (member_password !== confirm_member_password) {
      alert("비밀번호가 서로 다른 값임.");
      return false;
    }
  });
</script>
