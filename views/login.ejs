<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
  <div class="login-wrapper">
    <form action="/" method="post">
      <div class="login-screen">
        <div class="login-body">
          <a href="/index" class="login-logo">
            <img src="img/logo.svg" alt="Quick Chat" />
          </a>
          <h6>Welcome back,<br />Please login to your account.</h6>
          <div class="field-wrapper">
            <input type="email" name="email" id="email" autofocus />
            <div class="field-placeholder">Email ID</div>
          </div>
          <div class="field-wrapper mb-3">
            <input type="password" name="password" id="password" />
            <div class="field-placeholder">Password</div>
          </div>
          <p id="message"></p>
          <div class="actions">
            <a href="/find">Forgot password?</a>
            <button type="submit" class="btn btn-primary" id="button-login">
              Login
            </button>
          </div>
        </div>
        <div class="login-footer">
          <span class="additional-link"
            >No Account?
            <a href="/entry" class="btn btn-secondary">Sign Up</a></span
          >
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  const buttonLogin = document.getElementById('button-login');
  const handleValidation = e => {
    const email = document.getElementById('email');
    const password = document.getElementById('password');


    if (email.value === '') {
      e.preventDefault();
      email.focus();
      alert('이메일을 입력해주세요.');
      return false;
    }

    if (password.value === '') {
      e.preventDefault();
      password.focus();
      alert('비밀번호를 입력해주세요.');
      return false;
    }
  };


  var result = "<%=resultMsg%>";
    
    if(result != ''){
      document.getElementById('message').innerText = result;
    }


  buttonLogin.addEventListener('click', handleValidation);

</script>
